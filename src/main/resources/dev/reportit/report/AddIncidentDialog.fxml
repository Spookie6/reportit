<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ui.AddIncidentDialogController"
           stylesheets="@report.css" styleClass="dialogOverlay">
    <VBox spacing="12" styleClass="dialogCard" maxWidth="420">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Add an Incident" styleClass="dialogTitle"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Close" onAction="#onClose" styleClass="ghostBtn"/>
        </HBox>

        <Label text="Describe what happened and where. You can submit anonymously." styleClass="muted"/>
        <TextField promptText="Title (e.g., Street harassment)" styleClass="field"/>
        <TextField promptText="Location (optional)" styleClass="field"/>
        <TextArea promptText="Details" wrapText="true" styleClass="area" prefRowCount="6"/>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Cancel" onAction="#onClose" styleClass="ghostBtn"/>
            <Button text="Submit" styleClass="primaryBtn"/>
        </HBox>
    </VBox>
</StackPane>
